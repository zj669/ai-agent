<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zj.aiagent.infrastructure.agent.mapper.AgentMapper">

    <!-- Result Map with Type Handler -->
    <resultMap id="AgentResultMap" type="com.zj.aiagent.infrastructure.agent.po.AgentPO">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="icon" column="icon"/>
        <result property="status" column="status"/>
        <result property="publishedVersionId" column="published_version_id"/>
        <result property="version" column="version"/>
        <result property="deleted" column="deleted"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        
        <!-- Graph JSON mapping -->
        <result property="graphJson" column="graph_json" 
                typeHandler="com.baomidou.mybatisplus.extension.handlers.JacksonTypeHandler"/>
    </resultMap>

    <!-- Custom Update with Optimistic Lock (if not using MP built-in) -->
    <!-- MP @Version annotation handles this automatically for updateById, but declaring here for reference/custom usage -->
    <update id="updateWithLock">
        UPDATE agent_info
        SET 
            name = #{name},
            description = #{description},
            icon = #{icon},
            graph_json = #{graphJson, typeHandler=com.baomidou.mybatisplus.extension.handlers.JacksonTypeHandler},
            update_time = NOW(),
            version = version + 1
        WHERE id = #{id} AND version = #{version}
    </update>

</mapper>
